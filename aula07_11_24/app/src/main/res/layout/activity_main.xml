        <ImageButton
            android:id="@+id/btnFuncaoCalc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/ic_background_button_preto"
            android:contentDescription="@string/funcaoCalc"
            android:gravity="center"
            android:src="@drawable/calculator"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/ic_background_button_preto"
            android:contentDescription="@string/_0"
            android:gravity="center"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnDecimal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/ic_background_button_preto"
            android:contentDescription="@string/decimal"
            android:gravity="center"
            android:text="@string/decimal"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnIgual"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:background="@drawable/ic_background_button_laranja"
            android:contentDescription="@string/igual"
            android:gravity="center"
            android:text="@string/igual"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </GridLayout>


</androidx.constraintlayout.widget.ConstraintLayout>